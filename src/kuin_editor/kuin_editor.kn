func main()
	do \common@init()

	do \dll@initCompiler(2, \common@langEn ?(1, 0))
	do \find@init()
	do \form@makeWnd()
	do \doc_src@init()
	do \src@init()

	if(^lib@cmdLine() > 0)
		do \src@openMainSrc(lib@cmdLine()[0].replace("\\", "/"))
	else
		do \src@newMainSrc()
	end if

	do \form@init()
	do mainLoop()
	do \dll@finCompiler()

	func mainLoop()
		while(wnd@act())
			do \auxiliary@chk()
		end while
	end func
end func
